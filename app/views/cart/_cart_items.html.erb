<% @order_items.each do |item| %>
    <h3><%= item.product.title %></h3>
    <h3><%= number_to_indian_currency(item.product.price) %></h3>
    <%= form_with model: item do |f| %>
        <%= f.hidden_field :product_id, value: item.product.id %>
        <%= f.number_field :quantity, value: item.quantity.to_i %>
        <%= f.submit "Update Cart" %>
        <%= link_to "Remove Item", item, method: :delete, remote: true %>
    <% end %>
<h2> Subtotal: <%= number_to_indian_currency(item.total) %> </h2>
<% end %>

<h3>Your current order has a total of: <%= number_to_indian_currency(current_order.subtotal) %></h3>